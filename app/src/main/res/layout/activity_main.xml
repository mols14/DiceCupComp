<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Dicecup - portrait"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/layoutDices"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tvHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="332dp"
        android:background="@color/diceboard"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgDice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dice1" />

        <ImageView
            android:id="@+id/imgDice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dice1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDices2"
        android:layout_width="360"
        android:layout_height="200"
        android:layout_below="@id/tvHeader"
        android:background="@color/diceboard"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDice3"
            android:layout_width="176dp"
            android:layout_height="141dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgDice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dice1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDices3"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_below="@id/tvHeader"
        android:layout_marginTop="167dp"
        android:background="@color/diceboard"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDice6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dice1" />

        <ImageView
            android:id="@+id/imgDice5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dice1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnRoll"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Clear" />

    <Button
        android:id="@+id/btnRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutDices"
        android:layout_marginTop="42dp"
        android:text="Roll" />


</RelativeLayout>